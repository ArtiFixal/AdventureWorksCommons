@model AdventureWorksCommons.Models.ProductInventory
@{
    ViewData["Title"] = "Update Inventory Quantity";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateQuantity" method="post" class="form">
    <div class="form-group">
        <h3>Product: @Model.Product.Name</h3>
        <input type="hidden" asp-for="ProductId" class="form-control" />
    </div>

    <div class="form-group">
        <h3>Location: @Model.Location.Name</h3>
        <input type="hidden" asp-for="LocationId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">New Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
